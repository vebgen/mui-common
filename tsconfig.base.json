{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@vebgen/mui-buttons": ["packages/buttons/src/index.ts"],
            "@vebgen/mui-cards": ["packages/cards/src/index.ts"],
            "@vebgen/mui-icon-btns": ["packages/icon-btns/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
